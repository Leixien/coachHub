# Dockerfile semplice per NestJS
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY apps/api/package*.json ./
COPY apps/api/prisma ./prisma/

# Install dependencies
RUN npm install

# Copy source code  
COPY apps/api/src ./src
COPY apps/api/tsconfig*.json ./
COPY apps/api/.env* ./

# Generate Prisma client
RUN npx prisma generate

# Build application
RUN npm run build

# Expose port
EXPOSE 10000

# Start application
CMD ["npm", "run", "start:prod"]
